@model AspStudentPortal.Models.Demand
@using AspStudentPortal.Models
@{
    ViewBag.Title = "Newclasse";
    Layout = "~/Views/Shared/_layoutStudent.cshtml";
}


<div id="page-wrapper">
    <div class="main-page login-page ">
        <h2 class="title1">Request</h2>
        <div class="widget-shadow">
            <div class="login-body">

                @using (Html.BeginForm("NewRequest", "Student", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                <div class="form-group">
                    @Html.Label("Subject")
                    @Html.DropDownListFor(m => m.subject, new SelectList(Enum.GetValues(typeof(Subject))), "Select subject")
                </div>
                    <div class="form-group">
                        @Html.Label("Description")
                        @Html.TextAreaFor(m => m.description, new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(m => m.id)
                        <input type="submit" value="Save">
                    </div>


                }
            </div>
        </div>
    </div>
</div>
