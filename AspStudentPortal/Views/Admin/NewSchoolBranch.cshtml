@model  AspStudentPortal.Models.SchoolBranch

@{
    ViewBag.Title = "NewSchoolBranch";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

<div id="page-wrapper">
    <div class="main-page login-page ">
        <h2 class="title1">School Branch</h2>
        <div class="widget-shadow">
            <div class="login-body">
                @using (Html.BeginForm("CreateSchoolBranch", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {


                    <div class="form-group">
                        @Html.Label("School branch Name")
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" , @placeholder = "School Branch Name", @required = true })
                    </div>
                    <div class="form-group">
                        @Html.Label("Level ")
                        @Html.TextBoxFor(m => m.level, new { @class = "form-control", @placeholder = "School Branch level"  , @required=true})
                    </div>

                    <br />
                    <br />

                    <div class="form-group">
                        @Html.HiddenFor(m => m.id)
                        <input type="submit" value="Save">
                    </div>
                }
            </div>
        </div>

    </div>
</div>
