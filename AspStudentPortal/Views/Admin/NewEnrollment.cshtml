@model AspStudentPortal.Models.MVVC.EnrollmentStudent

@{
    ViewBag.Title = "New Enrollment";
    Layout = "~/Views/Shared/_layout2.cshtml";
}


<div id="page-wrapper">
    <div class="main-page login-page ">
        <h2 class="title1">Enrollment</h2>
        <div class="widget-shadow">
            <div class="login-body">
                @using (Html.BeginForm("CreateEnrollment", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.enrollment.dateEnrollment)
                        @Html.TextBoxFor(m => m.enrollment.dateEnrollment, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.enrollment.studentId, "studentId")
                        @Html.DropDownListFor(m => m.enrollment.studentId, new SelectList(Model.Students, "Id", "Username"), "select Student", new { @class = "form-control" })


                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.enrollment.classe)

                        @Html.DropDownListFor(m => m.enrollment.ClasseId, new SelectList(Model.classes, "id", "nameClasse"), "select class", new { @class = "form-control" })




                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.enrollment.id)
                        <input type="submit" value="Save">
                    </div>


                }
            </div>
        </div>
        </div>
    </div>


