@model AspStudentPortal.Models.MVVC.EnrollmentStudent

@{
    ViewBag.Title = "New Enrollment";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

<h2>New Enrollment</h2>

@using (Html.BeginForm("CreateEnrollment", "Admin" ,   FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container" style="padding : 80px 0 ; margin-left : 20%">
        <div class="form-group">
            @Html.LabelFor(m => m.enrollment.dateEnrollment)
            @Html.TextBoxFor(m => m.enrollment.dateEnrollment, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.enrollment.paymentMethod)
            @Html.TextBoxFor(m => m.enrollment.paymentMethod, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.enrollment.studentId)
            @Html.DropDownListFor(m => m.enrollment.studentId, new SelectList(Model.Students, "id", "id"), "select Student", new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.enrollment.ClasseId)
            @Html.DropDownListFor(m => m.enrollment.ClasseId, new SelectList(Model.Classes, "id", "id"), "select Classes", new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.enrollment.id)
        <button style="width: 1170px" type="submit" class="btn btn-block btn-warning"> save </button>
        </div>

        }

        
