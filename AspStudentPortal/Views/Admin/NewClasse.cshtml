@model AspStudentPortal.Models.MVVC.ClassBranchmvvc

@{
    ViewBag.Title = "Newclasse";
    Layout = "~/Views/Shared/_layout2.cshtml";
}


<div id="page-wrapper">
    <div class="main-page login-page ">
        <h2 class="title1">Classe form</h2>
        <div class="widget-shadow">
            <div class="login-body">

                @using (Html.BeginForm("CreateClasse", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.Label("Name")
                        @Html.TextBoxFor(m => m.classe.nameClasse, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.classe.schoolBranch, "studentId")
                        @Html.DropDownListFor(m => m.classe.schoolBranchId, new SelectList(Model.schoolBranches, "id", "name"), "select School branch", new { @class = "form-control" })


                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(m => m.classe.id)
                        <input type="submit" value="Save">
                    </div>


                }
          </div>
            </div>
        </div>
    </div>
